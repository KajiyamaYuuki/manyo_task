<%= flash[:alert] %>

<%= form_with(model: @task, local: true) do |f| %>
    <% if @task.errors.any? %>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  <div class="field">
    <%= f.label :title, "タスク名" %>
    <%= f.text_field :title %>
    <%= f.label :content, "詳細" %>
    <%= f.text_field :content %>
    <%= f.label :expired_at, "終了期限" %>
    <%= f.datetime_field :expired_at %>
  </div>
    <%= f.submit button_text %>
<% end %>
