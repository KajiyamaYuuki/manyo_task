<h1>Tasks#index</h1>
<h2><%= link_to "新しくタスクを作成", new_task_path %></h2>

<%= notice %>

<% @task.each do |task| %>
  <p><%= task.title %></p>
  <p><%= task.content %></p>
  <%= link_to "詳細", task_path(task.id) %>
  <%= link_to "編集", edit_task_path(task.id) %>
  <%= link_to "削除", task_path(task.id), method: :delete %>
<% end %>
