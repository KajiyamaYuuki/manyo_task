<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= notice %>

<% @task.each do |task| %>
  <p><%= task.title %></p>
  <p><%= task.content %></p>
  <%= link_to "詳細", task_path(task.id) %>
  <%= link_to "編集", edit_task_path(task.id) %>
  <%= link_to "削除", task_path(task.id), method: :delete %>
<% end %>
